@model PageWebMic.Areas.Admin.Models.articulos_contenido
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Main.cshtml";
}

@if (ViewBag.modelIdValidate == true)
{
    @Html.Partial("partial", (object)ViewBag.modelo, ViewData)
}
else
{
    <h2>Direcciones</h2>
        <br />
}
@if (Model != null) {
<div id="Col-Izquierda-Full" class="Col-Izquierda-SobreMIC">
    <div class="contenido">
        <div class="btn-tools">
        </div>


        <h4>@Model.subtitulo</h4>

        @Html.Raw(Model.contenido)
    </div>
    <div class="contenido" id="imprimir">

        <h1>Archivos</h1>
        <ul>
            @foreach (var item in Model.articulos_contenido_media)
            {

                <li class="mediaFile" style="list-style:none; padding:0px;">
                    <table class="stripe" width="100%" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr class="even">
                                <td align="left" valign="top" class="documentInfo-img">
                                    <img style="max-width:100px" src="@item.media.thumb" align="absmiddle" valign="bottom">&nbsp;
                                </td>
                                <td width="70%" align="left" valign="top" class="documentInfo"><a href="@item.media.url" target="_blank">@item.media.name</a><div class="documentDesc"></div></td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                </li>
            }

        </ul>


    </div>
</div>


    }