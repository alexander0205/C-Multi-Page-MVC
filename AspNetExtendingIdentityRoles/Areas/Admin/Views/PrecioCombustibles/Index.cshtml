@model IEnumerable<PageWebMic.Areas.Admin.Models.cambio_combustible>

@{
    int i = 1;
    ViewBag.Title = @ViewData["Rprecio_combustible"];
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Rprecio_combustible"]</h2>

<p>
    @Html.ActionLink(@ViewData["Rcrear"].ToString(), "Create")
</p>



<div class="row">
    @foreach (var item in Model.OrderByDescending(x=>x.id))
    {
        <div class="col-md-4">
            <table class="table table-striped  table-bordered">
               
                <tr>
                    <td>
                        @Html.LabelFor(modelItem => item.titulo)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                </tr>
                @foreach (var comP in item.cambio_combustible_precio)
                {
                   
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => comP.combustible.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => comP.precio)
                        </td>
                    </tr>


                }
                <tr>
                    <td>
                        @Html.LabelFor(modelItem => item.fecha)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                </tr>
                <tr>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = item.id })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.id })</td>
                </tr>
            </table>
        </div>
        i++;
    }

    </div>
