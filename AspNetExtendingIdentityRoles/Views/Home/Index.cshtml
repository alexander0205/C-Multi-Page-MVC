@model PageWebMic.Models.viewModelFront
@{
    //ViewBag.Title = "About";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}


    <!-- MENSAJE AÑO
    <section class="section section-colored" id="mensaje" name="mensaje" style="padding: 1em 0 0 0; background: url(images/bg/vichy.jpg) repeat left top;">
      <div class="text-center">
          <h4 class="opacity-zero show animated fadeInDown">"Año del Fomento a la Vivienda"</h4>
      </div>
    </section>
    <!--! MENSAJE AÑO -->
    <!-- COMBUSTIBLES Y NOTICIAS -->
    <section class="section section-colored" id="news" name="news">
        <div class="page-section-content overflow-hidden" style="padding: 0px !important; background: url(images/sections/blur-3.jpg) repeat-x left top; border-top: #FF1A26 5px solid;">
            <div class="container" style="margin: 2em auto 0 auto;">
                <div class="container dima-isotope-container ">
                    <section class="boxed-blog text-white">
                        <div class="ok-row">
                            <!-- PRECIOS COMBUSTIBLES -->
                            <div class="ok-md-4 ok-xsd-12 preciosComb opacity-zero show animated fadeInUp" data-animate="fadeInUp" data-delay="0" style="margin: 0 3% 2em 0; padding: 0 !important; min-width: 260px !important">
                                <h4 class="text-left opacity-zero show animated fadeInDown" data-animate="fadeInDown" data-delay="0" style="margin-bottom: 0.9em !important;">Precios de Combustibles</h4>
                                <h6 class="text-right opacity-zero show animated fadeInDown" data-animate="fadeInDown" data-delay="0" style="margin-bottom: 1em !important;">@Model.combustibleActual.titulo</h6>
                               
                                 <!-- COMBUSTIBLE  -->
                                <div class="preciosBorderSeparator" >
                                </div>
                                @foreach (var item in Model.combustibleActual.cambio_combustible_precio.OrderBy(x=>x.combustible.position))
                                {
                                    <div class="preciosBorderSeparator">
                                        <h6 class="h-skill undertitle">@item.combustible.nombre <span class="percent-end undertitle">RD$ @item.precio</span> </h6>
                                    </div>

                                }
                               
                                <!--! COMBUSTIBLE -->
                              
                               
                                <div align="center"><a href="#"><button class="di_darckblue button fill tiny ">Ver hist&oacute;rico de precios</button></a></div>
                            </div>
                            <!--! END PRECIOS COMBUSTIBLES -->
                            <!-- RESUMEN DE NOTICIAS -->
                            <div class="ok-md-8 ok-xsd-12 opacity-zero show" style="margin: 0 0 2em 0; padding: 0;">
                                <h4 class="text-left opacity-zero show" data-delay="0" style="margin-bottom: 0.8em !important;">Resumen de Noticias</h4>
                                @{ 
                                    int articulosFrontCount = 1;
                                }
                                @foreach (var item in Model.articulosFront)
                                {
                                    if (articulosFrontCount < 3)
                                    {
                                          <!-- POST (@articulosFrontCount) -->
                                        <article role="article" style="padding: 0 1rem 0 0 !important;" class="post ok-md-4 ok-xsd-6 opacity-zero show animated fadeInUp" data-animate="fadeInUp" data-delay="50">
                                            <div class="post-img ">
                                                <img src="@item.image_presentation_1" alt="@item.titulo">
                                                <div class="link_overlay with_opacity">
                                                    <ul class="icons-media">
                                                        <li><a data-animated-link="fadeOut" href="#"><i class="fa fa-link"></i></a></li>
                                                    </ul>
                                                    <span class="topaz-hover"></span>
                                                </div>
                                            </div>
                                            <div class="post-meta box">
                                                <ul>
                                                    <li class="post-on">@String.Format("{0:dd MMMM yyyy}", item.fecha)</li>
                                                </ul>
                                            </div>
                                            <div class="post-content text-start box">
                                                <h5><a style="height: 54px;    overflow: hidden;display: inline-block;" data-animated-link="fadeOut" href="#">@item.titulo</a></h5>
                                                <div align="right"><a href="#"><button class="di_darckblue button fill tiny ">Leer m&aacute;s</button></a></div>
                                            </div>
                                        </article>
                                         <!--! POST (@articulosFrontCount) -->

                                    }
                                   
                                    articulosFrontCount++;
                                }
                              
                                @{
                                     articulosFrontCount = 1;
                                }
                              
                                <!-- POST (3) -->
                                <article role="article" style="padding: 0 !important;" class="post ok-md-4 ok-xsd-6 opacity-zero show animated fadeInUp" data-animate="fadeInUp" data-delay="250">
                                    <div class="widget-content">
                                        <ul class="with-border featured-posts">
                                            @foreach (var item in Model.articulosFront)
                                            {
                                                if (articulosFrontCount > 2)
                                                {
                                                    <li>
                                                        <a data-animated-link="fadeOut" href="#">
                                                            <h6 style="max-height: 29px;    overflow: hidden;display: inline-block;" class="uppercase">@item.titulo</h6>
                                                        </a>
                                                        <span>@String.Format("{0:dd MMMM yyyy}", item.fecha)</span>
                                                        <span class="text-right"><a class="white" href="#">Leer m&aacute;s &gt;</a></span>
                                                    </li>
                                                }
                                                articulosFrontCount++;
                                            }
                                        </ul>
                                    </div>
                                    <div align="center" style="margin: 8px 0 0 0;"><a href="#"><button class="di_darckblue button fill tiny ">Ver m&aacute;s noticias</button></a></div>
                                </article>
                                <!--! POST (3) -->
                            </div>
                            <!--! END RESUMEN DE NOTICIAS -->
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
    <!--! END COMBUSTIBLES Y NOTICIAS -->
